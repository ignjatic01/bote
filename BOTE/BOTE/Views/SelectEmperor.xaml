<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BOTE.Views"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="BOTE.Views.SelectEmperor"
        mc:Ignorable="d"
        Title="SelectEmperor" Height="650" Width="1000"
        Background="#2D2D2D" Foreground="White">
    <Grid>
        <Border BorderBrush="White" BorderThickness="2" Padding="20" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <!-- Image -->
                <Image Source="../Images/baldwin.png" Width="200" Height="200" Stretch="UniformToFill"/>

                <!-- Title Text -->
                <TextBlock Text="Your Title Here" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>

                <!-- Button -->
                <Button Content="Click Me" Width="150" Height="40" Background="#4CAF50" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
